  <!-- CREATE NEW ACCOUNT -->
    <div aria-labelledby="newcaseform">

      <!-- BOXED AREA -->
      <fieldset class="slds-box slds-theme--default">

        <legend id="editaccountform" class="slds-text-heading--medium slds-p-vertical--medium">Edit Comment</legend>

        <!-- CREATE NEW ACCOUNT FORM -->
        <form action="/comment/new" method="post" class="slds-form--stacked">

          <div class="slds-grid slds-p-top--small">
            <div class="slds-col--padded">

              <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="commentbody">Comment</label>
                <div class="slds-form-element__control">
                  <textarea name="commentbody" id="commentbody" class="slds-textarea"></textarea>
                </div>
              </div>
              
              <div class="slds-hide"
                <div class="slds-form-element slds-hide">
                  <label class="slds-form-element__label" for="itemid">itemid</label>
                  <div class="slds-form-element__control">
                    <textarea name="itemid" id="itemid" class="slds-text">{{itemid}}</textarea>
                  </div>
                </div>
              </div>

            </div>
          </div>


          <button class="slds-button slds-button--brand slds-m-top--medium" type="submit">Save</button>
        </form>
        <!-- CREATE NEW ACCOUNT FORM -->

      </fieldset>
      <!-- / BOXED AREA -->

    </div>
