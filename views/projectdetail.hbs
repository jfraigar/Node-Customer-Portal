<nav class="slds-p-bottom--medium" role="navigation">
  <p id="bread-crumb-label" class="slds-assistive-text">You are here:</p>
  <ol class="slds-breadcrumb slds-list--horizontal" aria-labelledby="bread-crumb-label">
    <a href="/project/" class="slds-button slds-button--brand">Projects</a>
    <a href="/topic/" class="slds-button slds-button--brand">Topics</a>
    <a href="/epic/" class="slds-button slds-button--brand">Epics</a>
    <a href="/item/" class="slds-button slds-button--brand">Itens</a>
    <a href="/sprint/" class="slds-button slds-button--brand">Sprints</a>
    <a href="/logout/" class="slds-button slds-button--neutral">Logout</a>
  </ol>
</nav>

<!-- PAGE HEADER -->
<div class="slds-page-header" role="banner">

  <!-- PAGE HEADER TOP ROW -->
  <div class="slds-grid">

    <!-- PAGE HEADER / ROW 1 / COLUMN 1 --> 
    <div class="slds-col">

      <!-- HEADING AREA -->
      <!-- MEDIA OBJECT = FIGURE + BODY -->
      
      <div class="slds-media">        
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-standard-user">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#account"></use>
          </svg>
        </div>

        <div class="slds-media__body">
          <p class="slds-text-heading--label">Project</p>
          <h1 class="slds-text-heading--medium">{{get record 'Name'}}</h1>
        </div>
        {{#if (get record 'isProject__c')}}
        <div class="slds-media__body">
          <p class="slds-text-heading--label">Progress</p>
          <h1 class="slds-text-heading--medium">{{formatdecimal record 'Progress__c'}}</h1>
        </div>
        {{else}}
        <div class="slds-media__body">
          <p class="slds-text-heading--label">Start Date</p>
          <h1 class="slds-date-heading--medium">{{get record 'Start_Date_Formatted__c'}}</h1>
        </div>        
        <div class="slds-media__body">
          <p class="slds-text-heading--label">End Date</p>          
          <h1 class="slds-date-heading--medium">{{get record 'End_Date_Formatted__c'}}</h1>  
        </div>
        {{/if}}
      </div>
    
      <!-- / MEDIA OBJECT -->
      <!-- HEADING AREA -->

    </div>
    <!-- / PAGE HEADER / ROW 1 / COLUMN 1 -->

    <!-- PAGE HEADER / ROW 1 / COLUMN 2 -->

    <!-- / PAGE HEADER / ROW 1 / COLUMN 2 -->

  </div>
  <!-- / PAGE HEADER TOP ROW -->

  <!-- PAGE HEADER DETAIL ROW -->
  <div class="slds-grid slds-page-header__detail-row">

    <!-- PAGE HEADER / ROW 2 / COLUMN 1 -->    
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Estimated Story Points</p>
        </dt>
        <dd>{{get record 'Estimated_Story_Points__c'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 2 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Story Points</p>
        </dt>
        <dd>{{get record 'Story_Points__c'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 3 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Story Points Done</p>
        </dt>
        <dd>{{get record 'Story_Points_Done__c'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 4 -->
    <div class="slds-col--padded slds-size--1-of-4">
      {{#if (get record 'isProject__c')}}
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Status</p>
        </dt>
        <dd>         
          <p class="slds-text-body--regular slds-truncate">{{get record 'Status_formula__c'}}</p>         
        </dd>
      </dl>
      {{/if}}
    </div>

  </div>
  <!-- / PAGE HEADER DETAIL ROW -->

</div>
<!-- / PAGE HEADER -->


{{#if (get record 'isProject__c')}}
<!-- PRIMARY CONTENT WRAPPER -->
<div class="myapp">

  <!-- RELATED LIST CARDS-->

<div class="slds-grid slds-m-top--large">

<!-- MAIN CARD -->
<div class="slds-col slds-col-rule--right slds-p-right--large slds-size--7-of-12">

  <div class="slds-card">

    <header class="slds-card__header slds-grid">
      <div class="slds-col slds-media slds-media--center">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon-standard-contact slds-icon--small">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#contract"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <h3 class="slds-text-heading--small">Vision & Constrains</h3>
        </div>
      </div>
    </header>


    <!-- CARD BODY = TABLE -->
    <section class="slds-card__body">
      <div class="slds-tile">
        <p class="slds-tile__title slds-truncate"><a href="#">Vision</a></p>
          <div class="slds-tile__detail slds-text-body--small">
        <p>{{{get record 'vision__c'}}}</p>
          </div>
      </div>  
      <div class="slds-tile">
        <p class="slds-tile__title slds-truncate"><a href="#">Constrains</a></p>
          <div class="slds-tile__detail slds-text-body--small">
        <p>{{{get record 'constrains__c'}}}</p>
          </div>
      </div>
    </section>

    <!-- / CARD BODY = SECTION + TABLE -->


  </div>

</div>
<!-- / MAIN CARD -->


<!-- COMPACT CARD -->
<div class="slds-col slds-p-left--large slds-size--5-of-12">

  <div class="slds-card">

    <header class="slds-card__header">
      <div class="slds-media slds-media--center">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon-standard-lead slds-icon--small">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#lead"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <h3 class="slds-text-heading--small">Topics</h3>
        </div>
      </div>
    </header>

    <section class="slds-card__body">
      <!--<div class="slds-scrollable--x">-->
        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal">
          <thead>
            <tr class="slds-no-hover">
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Name</th>
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Story Points</th>
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Progress</th>              
            </tr>
          </thead>
          <tbody>
            {{#each topics}}
            <tr class="slds-hint-parent">
              <td class="slds-size--1-of-3" data-label="Name"><a href="/topic/{{get this 'Id'}}">{{get this 'Name'}}</a></td>
              <td class="slds-size--1-of-3" data-label="Story Points">{{get this 'Story_Points__c'}}</td>
              <td class="slds-size--1-of-3" data-label="Progress">{{formatdecimal this 'progress__c'}}</td>
              <td>            
            </tr>
            {{/each}}
          </tbody>
        </table>
      <!--</div>-->
    </section>

    <footer class="slds-card__footer">
      
    </footer>

  </div>

</div>
<!-- / COMPACT CARD -->


</div>
  <!-- / RELATED LIST CARDS -->

</div>
<!-- / PRIMARY CONTENT WRAPPER -->
{{else}}
<div class="myapp">
  <!-- RELATED LIST CARDS-->
<div class="slds-grid slds-m-top--large">

<div class="slds-col slds-p-left--large slds-size--12-of-12">

  <div class="slds-card">

    <header class="slds-card__header">
      <div class="slds-media slds-media--center">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon-standard-lead slds-icon--small">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#case"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <h3 class="slds-text-heading--small">Months</h3>
        </div>
      </div>
    </header>

    <section class="slds-card__body">
      <!--<div class="slds-scrollable--x">-->
        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal">
          <thead>
            <tr class="slds-no-hover">
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Date</th>
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Itens Created</th>
              <th class="slds-text-heading--label slds-size--1-of-3" scope="col">Story Points Delivered</th>              
            </tr>
          </thead>
          <tbody>
            {{#each months}}
            <tr class="slds-hint-parent">
              <td class="slds-size--1-of-3" data-label="Name">{{data}}</td>
              <td class="slds-size--1-of-3" data-label="Title">{{numCriados}}</td>
              <td class="slds-size--1-of-3" data-label="Title">{{numPontosMelhoria}}</td>
              <td>            
            </tr>
            {{/each}}
          </tbody>
        </table>
      <!--</div>-->
    </section>

    <footer class="slds-card__footer">
      
    </footer>

  </div>

</div>

</div>
  <!-- / RELATED LIST CARDS -->
</div>
{{/if}}