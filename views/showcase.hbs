    <!-- PAGE HEADER / ROW 2 / COLUMN 1 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Description</p>
        </dt>
        <dd>
          <p class="slds-text-body--regular slds-truncate">{{get record 'Description'}}</p>
        </dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 2 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">CaseNumber</p>
        </dt>
        <dd>{{get record 'CaseNumber'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 3 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Prioridade</p>
        </dt>
        <dd>{{get record 'Priority'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 4 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Assunto</p>
        </dt>
        <dd>{{get record 'Subject'}}</dd>
      </dl>
    </div>

  </div>
  <!-- / PAGE HEADER DETAIL ROW -->

</div>
