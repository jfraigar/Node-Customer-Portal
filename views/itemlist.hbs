<!-- PRIMARY CONTENT WRAPPER -->
<div class="myapp">
  <div class="slds-scrollable--x">
    <table class="slds-table slds-table--bordered" id="table_id">
      <thead>
        <tr>          
          <th scope="col">Name</th>
          <th scope="col">Project</th>
          <th scope="col">Epic</th>
          <th scope="col">Priority</th>          
          <th scope="col">Story Points</th>  
          <th scope="col">Status</th>                  
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </tfoot>
      <tbody>
        {{#each records}}
        <tr>
          <td><a href="/item/{{get this 'Id'}}">{{get this 'Name'}}-{{get this 'Subject__c'}}</a></td>
          <td><a href="/project/{{get this 'Project_Id__c'}}">{{get this 'Project_Name__c'}}</a></td>
          <td>
              {{#if (get this 'isProject__c')}}
              <a href="/epic/{{get this 'Epic_Id__c'}}">{{get this 'Epic_Name__c'}}</a>
              {{else}}
              {{get this 'Epic_Name__c'}}
              {{/if}}
          </td>    
          <td>{{get this 'Priority__c'}}</td>       
          <td>{{get this 'Story_Points__c'}}</td>
          <td>{{get this 'Status__c'}}</td>         
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<!-- / PRIMARY CONTENT WRAPPER -->
<!-- DATATABLE SCRIPT -->
<script>
$(document).ready(function() {
    $('#table_id').DataTable( {
        initComplete: function () {
            this.api().columns().every( function () {
                var column = this;        
                var title = column.header(); 
                //alert( 'Column title clicked on: '+$(title).html() );
                if($(title).html() == 'Project' || $(title).html() == 'Epic' || $(title).html() == 'Status'){
                    var select = $('<select><option value=""></option></select>')
                      .appendTo( $(column.footer()).empty() )
                      .on( 'change', function () {
                          var val = $.fn.dataTable.util.escapeRegex($(this).val());//               
                          column
                            .search( val ? '^'+val+'$' : '', true, false )
                            .draw();
                      } );//.on( 'change', function () {
             
                    column.data().unique().sort().each( function ( d, j ) {
                      select.append( '<option value="'+d+'">'+d+'</option>' )
                    } );//column.data().unique().sort().each( function ( d, j ) {
                }//if($(title).html() == 'caseNumber'){
            } ); //this.api().columns().every( function () {
        }// initComplete: function () {
    } );// $('#table_id').DataTable( {
} ); // $(document).ready(function()
</script>
<!-- / DATATABLE SCRIPT -->