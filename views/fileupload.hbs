<div class="myapp">

  <!-- CREATE NEW ACCOUNT -->
    <div aria-labelledby="newattachmentform">

      <!-- BOXED AREA -->
      <fieldset class="slds-box slds-theme--default">

        <legend id="editaccountform" class="slds-text-heading--medium slds-p-vertical--medium">Edit Attachment</legend>

        <!-- CREATE NEW ACCOUNT FORM -->
        <form action="/fileupload/new" method="post" enctype='multipart/form-data' class="slds-form--stacked">

          <div class="slds-grid slds-p-top--small">
            <div class="slds-col--padded">

              <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="description">Description</label>
                <div class="slds-form-element__control">
                  <textarea name="description" id="description" class="slds-textarea"></textarea>
                </div>
              </div>

              <div class="slds-form-element slds-is-required">
                <label class="slds-form-element__label" for="name">File</label>
                <div class="slds-form-element__control">
                  <input name="anexo" id="anexo" class="slds-input" type="file"/>
                  <span id="assuntoHelp" class="slds-form-element__help">Choose a file from your PC</span>
                </div>
              </div>             


            </div>
          </div>


          <button class="slds-button slds-button--brand slds-m-top--medium" type="submit">Save</button>
        </form>
        <!-- CREATE NEW ACCOUNT FORM -->

      </fieldset>
      <!-- / BOXED AREA -->

    </div>
    <!-- / CREATE NEW ACCOUNT -->

</div>
