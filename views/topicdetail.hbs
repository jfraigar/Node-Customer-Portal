<!-- PAGE HEADER -->
<div class="slds-page-header" role="banner">

  <!-- PAGE HEADER TOP ROW -->
  <div class="slds-grid">

    <!-- PAGE HEADER / ROW 1 / COLUMN 1 -->
    <div class="slds-col">

      <!-- HEADING AREA -->
      <!-- MEDIA OBJECT = FIGURE + BODY -->
      <div class="slds-media">

        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-standard-user">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#lead"></use>
          </svg>
        </div>

        <div class="slds-media__body">
          <p class="slds-text-heading--label">Topic</p>
          <h1 class="slds-text-heading--medium">{{get record 'Name'}}</h1>
        </div>

        <div class="slds-media__body">
          <p class="slds-text-heading--label">Progress</p>
          <h1 class="slds-text-heading--medium">{{formatdecimal record 'Progress__c'}}</h1>
        </div>

      </div>
      <!-- / MEDIA OBJECT -->
      <!-- HEADING AREA -->

    </div>
    <!-- / PAGE HEADER / ROW 1 / COLUMN 1 -->

    <!-- PAGE HEADER / ROW 1 / COLUMN 2 -->

    <!-- / PAGE HEADER / ROW 1 / COLUMN 2 -->

  </div>
  <!-- / PAGE HEADER TOP ROW -->

  <!-- PAGE HEADER DETAIL ROW -->
  <div class="slds-grid slds-page-header__detail-row">

    <!-- PAGE HEADER / ROW 2 / COLUMN 1 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Progress</p>
        </dt>
        <dd>
          <p class="slds-text-body--regular slds-truncate">{{get record 'Progress__c'}}</p>
        </dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 2 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Story Points</p>
        </dt>
        <dd>{{get record 'Story_Points__c'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 3 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Story Points (Done)</p>
        </dt>
        <dd>{{get record 'Story_Points_done__c'}}</dd>
      </dl>
    </div>

    <!-- PAGE HEADER / ROW 2 / COLUMN 4 -->
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate">Story Points</p>
        </dt>
        <dd>{{get record 'Story_Points__c'}}</dd>
      </dl>
    </div>

  </div>
  <!-- / PAGE HEADER DETAIL ROW -->

</div>
<!-- / PAGE HEADER -->

<!-- PRIMARY CONTENT WRAPPER -->
<div class="myapp">

  <!-- RELATED LIST CARDS-->

  <div class="slds-grid slds-m-top--large">

<!-- MAIN CARD -->
<div class="slds-col slds-col-rule--right slds-p-right--large slds-size--7-of-12">

  <div class="slds-card">

    <header class="slds-card__header slds-grid">
      <div class="slds-col slds-media slds-media--center">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon-standard-contact slds-icon--small">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#contract"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <h3 class="slds-text-heading--small">Description & Assumptions</h3>
        </div>
      </div>
    </header>


    <!-- CARD BODY = TABLE -->
    <section class="slds-card__body">
      <div class="slds-tile">
        <p class="slds-tile__title slds-truncate"><a href="#">Description</a></p>
          <div class="slds-tile__detail slds-text-body--small">
        <p class="slds-truncate">{{{get record 'description__c'}}}</p>
          </div>
      </div>  
      <div class="slds-tile">
        <p class="slds-tile__title slds-truncate"><a href="#">Assumptions</a></p>
          <div class="slds-tile__detail slds-text-body--small">
        <p class="slds-truncate">{{{get record 'assumptions__c'}}}</p>
          </div>
      </div>
    </section>

    <!-- / CARD BODY = SECTION + TABLE -->


  </div>

</div>
<!-- / MAIN CARD -->


<!-- COMPACT CARD -->
<div class="slds-col slds-p-left--large slds-size--5-of-12">

  <div class="slds-card">

    <header class="slds-card__header">
      <div class="slds-media slds-media--center">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon-standard-lead slds-icon--small">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#opportunity"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <h3 class="slds-text-heading--small">Epics</h3>
        </div>
      </div>
    </header>

    <section class="slds-card__body">
      <!--<div class="slds-scrollable--x">-->
        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal">
          <thead>
            <tr class="slds-no-hover">
              <th class="slds-text-heading--label slds-size--1-of-2" scope="col">Name</th>
              <th class="slds-text-heading--label slds-size--1-of-2" scope="col">Story Points</th>
              <th class="slds-text-heading--label slds-size--1-of-2" scope="col">Progress</th>              
            </tr>
          </thead>
          <tbody>
            {{#each epics}}
            <tr class="slds-hint-parent">
              <td class="slds-size--1-of-2" data-label="Name"><a href="/epic/{{get this 'Id'}}">{{get this 'Name'}}</a></td>
              <td class="slds-size--1-of-2" data-label="Title">{{get this 'Story_Points__c'}}</td>
              <td class="slds-size--1-of-2" data-label="Title">{{formatdecimal this 'progress__c'}}</td>
              <td>            
            </tr>
            {{/each}}
          </tbody>
        </table>
      <!--</div>-->
    </section>

    <footer class="slds-card__footer">
     
    </footer>

  </div>

</div>
<!-- / COMPACT CARD -->


  </div>
  <!-- / RELATED LIST CARDS -->

</div>
<!-- / PRIMARY CONTENT WRAPPER -->
